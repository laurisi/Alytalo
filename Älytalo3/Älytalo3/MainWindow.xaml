        <Button Content="kirkas" HorizontalAlignment="Left" Margin="29,289,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_4" Height="20"/>
        <Button Content="olohuone" HorizontalAlignment="Left" Margin="29,65,0,0" VerticalAlignment="Top" Width="104" Height="23" Click="Button_Click"/>
        <Button Content="makuuhuone" HorizontalAlignment="Left" Margin="152,65,0,0" VerticalAlignment="Top" Width="123" Height="23"/>
