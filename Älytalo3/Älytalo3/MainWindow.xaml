        xmlns:local="clr-namespace:Älytalo3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="821.5" ResizeMode="CanResizeWithGrip">
    <Grid Margin="0,0,3,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition MinWidth="175" Width="Auto"/>
            <ColumnDefinition Width="117*"/>
        </Grid.ColumnDefinitions>
        <Button Content="pois" HorizontalAlignment="Left" Margin="29,214,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Height="20"/>
        <Button Content="hämärä" HorizontalAlignment="Left" Margin="29,239,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2" Height="20"/>
